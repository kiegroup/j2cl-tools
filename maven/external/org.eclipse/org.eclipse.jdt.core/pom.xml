      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>build-helper-maven-plugin</artifactId>
        <version>3.0.0</version>
        <executions>
          <execution>
            <id>attach-artifacts</id>
            <phase>package</phase>
            <goals>
              <goal>attach-artifact</goal>
            </goals>
            <configuration>
              <artifacts>
                <artifact>
                  <file>../../../../bazel-genfiles/external/org_eclipse_jdt_core/jar/_ijar/jar/external/org_eclipse_jdt_core/jar/org.eclipse.jdt.core_3.13.100.v20171123-1049-ijar.jar</file>
                  <type>jar</type>
                </artifact>
              </artifacts>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <!-- J2CL appears to only use JDT core classes, so we'll assume that all other dependencies are requirements
  of jdt-core itself
